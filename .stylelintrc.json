{
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 4,
        "color-hex-length": "long",
        "declaration-colon-newline-after": null,
        "at-rule-empty-line-before": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "value"
                ]
            }
        ],
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": [
                    "composes"
                ]
            }
        ],
        "value-keyword-case": null
    }
}
